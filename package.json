{
	"name": "repo-starter-kit",
	"description": "CLI to bootstrap and sync repository labels, issues, branch rulesets and config.",
	"version": "0.2.1",
	"author": {
		"name": "Baptiste Augrain",
		"email": "daiyam@zokugun.org"
	},
	"license": "MIT",
	"homepage": "https://github.com/zokugun/repo-starter-kit",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/zokugun/repo-starter-kit.git"
	},
	"bugs": {
		"url": "https://github.com/zokugun/repo-starter-kit/issues"
	},
	"engines": {
		"node": ">=18.20"
	},
	"type": "module",
	"bin": {
		"repo-starter-kit": "bin/repo-starter-kit"
	},
	"main": "lib/cli.js",
	"scripts": {
		"clean": "rimraf lib",
		"compile:src": "tsc -p src",
		"lint": "xo",
		"lint:fix": "xo --fix",
		"postinstall": "patch-package",
		"prepack": "npm run compile:src",
		"prepare": "husky; fixpack || true",
		"release": "release-it",
		"watch:src": "tsc-watch -p src"
	},
	"dependencies": {
		"@octokit/auth-oauth-device": "^8.0.3",
		"@octokit/rest": "^22.0.1",
		"@zokugun/fs-extra-plus": "^0.3.3",
		"@zokugun/xtry": "^0.10.1",
		"ansi-colors": "^4.1.3",
		"cli-spinners": "^3.4.0",
		"clipboardy": "^5.0.2",
		"commander": "^14.0.3",
		"enquirer": "^2.4.1",
		"gray-matter": "^4.0.3",
		"log-update": "^7.1.0",
		"open": "^11.0.0",
		"pacote": "^21.0.4",
		"patch-package": "^8.0.1",
		"tempy": "^3.1.0",
		"untildify": "^6.0.0",
		"yaml": "^2.8.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.7.1",
		"@commitlint/config-conventional": "^19.7.1",
		"@types/node": "^20.14.8",
		"@types/pacote": "^11.1.8",
		"fixpack": "^4.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.4",
		"release-it": "^18.1.2",
		"tsc-watch": "^7.2.0",
		"typescript": "^5.7.3",
		"xo": "0.60.0"
	},
	"keywords": [
		"automation",
		"cli",
		"github",
		"issues",
		"labels",
		"repo",
		"starter"
	]
}
